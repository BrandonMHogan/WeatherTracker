<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="@dimen/about_title_width"
        android:layout_height="@dimen/about_title_height"
        android:layout_marginLeft="@dimen/about_title_margin_side"
        android:layout_marginRight="@dimen/about_title_margin_side"
        android:layout_marginTop="@dimen/about_title_margin_top"
        android:text="@string/about_title"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.504" />

    <ImageView
        android:id="@+id/darksky"
        android:layout_width="@dimen/about_image_width"
        android:layout_height="@dimen/about_image_height"
        android:layout_marginLeft="@dimen/about_image_margin_side"
        android:layout_marginRight="@dimen/about_image_margin_side"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/poweredby_oneline"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/about_image_margin_bottom"
        android:contentDescription="@null"/>

</android.support.constraint.ConstraintLayout>